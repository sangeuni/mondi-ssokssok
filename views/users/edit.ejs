<!-- views/users/edit.ejs -->


<!DOCTYPE html>
<html>
  <head>
    <% include ../partials/head %>
  </head>
  <body>
    <% include ../partials/nav %>
    	<div>
    <!-- banner -->
    <div class="jumbotron text-center">
      <h1>My Account</h1>
    </div>
    <!-- //banner -->



  <div class="container user user-edit"  style="padding: 0px 0px 40px 0px">

   <div class="buttons">
    <a class="btn btn-default" href="/users/<%= username %>">Back</a>
   </div>

   <form class="user-form form-horizontal" action="/users/<%= user.username %>?_method=put" method="post">
    <div class="contentBox">
     <h3 class="contentBoxTop">Edit User</h3>
     <fieldset>
       <div class="form-group">
       <label for="currentPassword" class="col-sm-12 control-label">Current Password*</label>
       <div class="col-sm-9 col-sm-offset-3">
        <input class="form-control" type="password" id="currentPassword" name="currentPassword" value="">
       </div>
      </div>
      <hr></hr>
      <div class="form-group">
       <label for="username" class="col-sm-3 control-label">Username*</label>
       <div class="col-sm-9">
        <input class="form-control" type="text" id="username" name="username" value="<%= user.username %>">
       </div>
      </div>

      <div class="form-group">
       <label for="name" class="col-sm-3 control-label">Name*</label>
       <div class="col-sm-9">
        <input class="form-control" type="text" id="name" name="name" value="<%= user.name %>">
       </div>
      </div>

      <div class="form-group">
       <label for="email" class="col-sm-3 control-label">Email</label>
       <div class="col-sm-9">
        <input class="form-control" type="text" id="email" name="email" value="<%= user.email %>">
       </div>
      </div>

      <div class="form-group">
       <label for="newPassword" class="col-sm-12 control-label">New Password</label>
       <div class="col-sm-9 col-sm-offset-3">
        <input class="form-control" type="password" id="newPassword" name="newPassword" value="">
       </div>
      </div>

      <div class="form-group">
       <label for="passwordConfirmation" class="col-sm-12 control-label">Password Confirmation</label>
       <div class="col-sm-9 col-sm-offset-3">
        <input class="form-control" type="password" id="passwordConfirmation" name="passwordConfirmation" value="">
       </div>
      </div>
      <p>
       <small>*Required</small>
      </p>
     </fieldset>
    </div>
    <!-- 상세정보 수정 -->
    <div class="contentBox">
     <h3 class="contentBoxTop">상세정보</h3>
       <fieldset>
        <div class="form-group">
         <label for="local" class="col-sm-4 control-label">희망지역</label>
         <div class="col-sm-6">
        <select class="form-control" id="local" name="local" value="<%= user.local %>">
          <option>무관</option>
          <option>서울</option>
          <option>경기</option>
          <option>인천</option>
          <option>부산</option>
          <option>대구</option>
          <option>대전</option>
          <option>경남</option>
          <option>전남</option>
          <option>충남</option>
          <option>광주</option>
          <option>울산</option>
          <option>경북</option>
          <option>전북</option>
          <option>충북</option>
          <option>강원</option>
          <option>제주</option>
          <option>세종</option>
        </select>


         </div>
        </div>

        <div class="form-group">
         <label for="background" class="col-sm-4 control-label">최종학력</label>
         <div class="col-sm-6">
        <select class="form-control" id="background" name="background" value="<%= user.background %>">
          <option>무관</option>
          <option>대졸</option>
          <option>고졸</option>
          <option>중졸</option>
        </select>

         </div>
        </div>

        <div class="form-group">
         <label for="etype" class="col-sm-4 control-label">고용형태</label>
         <div class="col-sm-6">
        <select class="form-control" id="etype" name="etype" value="<%= user.etype %>">
          <option>상용</option>
          <option>계약</option>
        </select>
         </div>
        </div>




        <div class="form-group">
         <label for="career" class="col-sm-4 control-label">경력</label>
         <div class="col-sm-6">
        <select class="form-control" id="career" name="career" value="<%= user.career %>">
          <option>무관</option>
          <option>신입</option>
          <option>경력</option>
        </select>
         </div>
        </div>






        <div class="form-group">
         <label for="dtype" class="col-sm-4 control-label">장애유형</label>
         <div class="col-sm-6">
        <select class="form-control" id="dtype" name="dtype" value="<%= user.dtype %>">
          <option>무관</option>
          <option>지체장애</option>
          <option>시각장애</option>
          <option>청각장애</option>
          <option>언어장애</option>
          <option>지적장애</option>
          <option>간장애</option>
          <option>뇌병변장애</option>
          <option>정신장애</option>
          <option>자폐성장애</option>
          <option>신장장애</option>
          <option>심장장애</option>
          <option>호흡기장애</option>
          <option>뇌전증장애</option>
          <option>상이등급해당자</option>
          <option>장루장애</option>
        </select>



         </div>
        </div>
       </fieldset>
      </div>

    <div class="buttons">
     <button type="submit" class="btn btn-default">Submit</button>
    </div>
    <% if(errors.unhandled){ %>
     <div class="alert alert-danger">
      <%= errors.unhandled %>
     </div>
    <% } %>
   </form>

  </div> <!-- container end -->

<% include ../partials/footer.ejs %>

 </body>
</html>
